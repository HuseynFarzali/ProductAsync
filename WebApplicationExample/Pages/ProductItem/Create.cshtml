@page
@model WebApplicationExample.Pages.ProductItem.CreateModel
@{
}

@{
    ViewData["Title"] = "Create Product Item";
}

<h2>Create Product Item</h2>

<form asp-page="Create" method="post">
    <div class="form-group">
        <label asp-for="Command.ProductId"></label>
        <input asp-for="Command.ProductId" class="form-control" />
        <span asp-validation-for="Command.ProductId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Command.SizeId"></label>
        <input asp-for="Command.SizeId" class="form-control" />
        <span asp-validation-for="Command.SizeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Command.ColorId"></label>
        <input asp-for="Command.ColorId" class="form-control" />
        <span asp-validation-for="Command.ColorId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Command.CategoryId"></label>
        <input asp-for="Command.CategoryId" class="form-control" />
        <span asp-validation-for="Command.CategoryId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>