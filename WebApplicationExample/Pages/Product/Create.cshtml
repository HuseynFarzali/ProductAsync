@page
@model WebApplicationExample.Pages.Product.CreateModel

@{
    ViewData["Title"] = "Create Product";
}

<h2>Create Product</h2>

<form asp-page="Create" method="post">
    <div class="form-group">
        <label asp-for="Command.Name"></label>
        <input asp-for="Command.Name" class="form-control" />
        <span asp-validation-for="Command.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Command.Price"></label>
        <input asp-for="Command.Price" class="form-control" />
        <span asp-validation-for="Command.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Command.Rating"></label>
        <input asp-for="Command.Rating" class="form-control" />
        <span asp-validation-for="Command.Rating" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
