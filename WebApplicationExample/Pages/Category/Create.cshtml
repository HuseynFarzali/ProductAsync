@model WebApplicationExample.Pages.Category.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<h2>Create Color</h2>

<form asp-page="Create" method="post">
    <div class="form-group">
        <label asp-for="Command.Name"></label>
        <input asp-for="Command.Name" class="form-control" />
        <span asp-validation-for="Command.Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
